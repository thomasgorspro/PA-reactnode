<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/output.css" type="text/css" />
    <link rel="stylesheet" href="/stylesheets/style.css" type="text/css">
    <title>Payment</title>
  </head>

  <body>
    <section class="flex flex-col justify-center items-center h-screen">
      <div class="w-full max-w-lg mb-6 font-bold text-xl text-purple-600">
        <h1>ENTER CREDITCARD DETAILS</h1>
      </div>

      <form class="w-full max-w-lg">
        <div class="flex flex-wrap -mx-3 mb-6">
          <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            <label
              class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
            >
              Credit card number :
            </label>
            <input
              class="appearance-none block w-full bg-gray-200 text-gray-700 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white border border-gray-200 focus:border-gray-500"
              type="text"
              placeholder="**** **** **** ****"
              name="ccn"
            />
          </div>
          <div class="w-full md:w-1/4 px-3">
            <label
              class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
            >
              Expires :
            </label>
            <input
              class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
              type="text"
              placeholder="MM"
              name="expiresFrom"
            />
          </div>
          <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
            <input
              class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
              type="text"
              placeholder="YYYY"
              style="margin-top: 25px;"
              name="expiresTo"
            />
          </div>
          <div class="w-full md:w-3/4 px-3 mb-6 md:mb-0">
            <label
              class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
            >
              Name on credit card :
            </label>
            <input
              class="appearance-none block w-full bg-gray-200 text-gray-700 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white border border-gray-200 focus:border-gray-500"
              type="text"
              name="cc-name"
            />
          </div>
          <div class="w-full md:w-1/4 px-3 mb-6 md:mb-0">
            <label
              class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
            >
              CVC :
            </label>
            <input
              class="appearance-none block w-full bg-gray-200 text-gray-700 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white border border-gray-200 focus:border-gray-500"
              type="text"
              name="cvc"
            />
          </div>
        </div>
      </form>
      <div id="actions" class="w-full max-w-lg flex items-center justify-center">
        <button
          class="mx-6 border-transparent border-4 text-teal-500 hover:text-teal-800 text-sm py-2 px-4 rounded"
          type="button"
        >
          Cancel
        </button>
        <button
          id="pay"
          class="mx-6 bg-teal-500 hover:ng-teal-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
          type="button"
        >
          Accept
        </button>
      </div>
    </section>
  </body>
  <script type="text/javascript">
    const acceptBtn = document.getElementById("pay");
    if (acceptBtn) {
      acceptBtn.addEventListener("click", () => {
        const div = document.createElement("div");
        const appendTo = document.getElementById("actions");
        div.classList.add("loader", "ease-linear", "rounded-full", "border-8", "border-t-8", "border-gray-200", "h-12", "w-12");
        appendTo.appendChild(div);
        fetch("/payment", {
          method: "POST",
          headers: {
            "Content-Type": "application/json"
          },
          body: JSON.stringify({
            bank: {
              ccNumber: document.querySelector("input[name='ccn']").value,
              expiresFrom: document.querySelector("input[name='expiresFrom']").value,
              expiresTo: document.querySelector("input[name='expiresTo']").value,
              ccName: document.querySelector("input[name='cc-name']").value,
              cvc: document.querySelector("input[name='cvc']").value,
            },

          })
        }).then((res) => {
          if (res.status === 200) {
            window.location.replace("/shop/confirm");
          }
        });
      });
    }
  </script>
</html>
