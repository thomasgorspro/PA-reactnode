<%- include('templates/header') %>

<section class="m-8">
  <div class="flex justify-center my-6">
    <div
      class="flex flex-col w-full p-8 text-gray-800 bg-white rounded shadow-md pin-r pin-y md:w-4/5 lg:w-4/5"
    >
      <h1 class="text-xl font-bold">Your cart</h1>
      <span class="mb-4">Confirm your cart and give us all of your money.</span>
      <div class="flex-1">
        <table class="w-full text-base" cellspacing="0">
          <thead>
            <tr class="text-xs h-12 uppercase border-b border-b-1">
              <th class="hidden md:table-cell"></th>
              <th class="text-left">Product</th>
              <th class="lg:text-right text-left pl-5 lg:pl-0">
                <span class="lg:hidden" title="Quantity">Qtd</span>
                <span class="hidden lg:inline">Quantity</span>
              </th>
              <th class="hidden text-right md:table-cell">Unit price</th>
              <th class="text-right">Total price</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="hidden py-4 md:table-cell">
                <a href="#">
                  <img
                    src="https://limg.app/i/Calm-Cormorant-Catholic-Pinball-Blaster-yM4oub.jpeg"
                    class="w-24"
                    alt="Thumbnail"
                  />
                </a>
              </td>
              <td>
                <a href="#">
                  <p class="mb-2 md:ml-4">Earphone</p>
                </a>
              </td>
              <td class="justify-center md:justify-end md:flex mt-6">
                <div class="w-20 h-10">
                  <div class="relative flex flex-row w-full h-8">
                    <input id="quantityEarphone" type="number" value="2" data-id="1"
                      class="w-full font-semibold text-center text-gray-700 bg-gray-200 outline-none focus:outline-none hover:text-black focus:text-black" />
                  </div>
                </div>
              </td>
              <td class="hidden text-right md:table-cell">
                <span class="text-sm lg:text-base font-medium">
                  10.00€
                </span>
              </td>
              <td class="text-right">
                <span id="resultEarphone" class="text-sm lg:text-base font-medium">
                  20.00€
                </span>
              </td>
            </tr>
            <tr>
              <td class="hidden py-4 md:table-cell">
                <a href="#">
                  <img
                    src="https://limg.app/i/Cute-Constrictor-Super-Sexy-Military-Enforcer-W7mvBp.png"
                    class="w-24"
                    alt="Thumbnail"
                  />
                </a>
              </td>
              <td>
                <p class="mb-2 md:ml-4">Tesla Model 3</p>
              </td>
              <td class="justify-center md:justify-end md:flex md:mt-4">
                <div class="w-20 h-10">
                  <div class="relative flex flex-row w-full h-8">
                    <input id="quantityTesla" type="number" value="3" data-id="2"
                      class="w-full font-semibold text-center text-gray-700 bg-gray-200 outline-none focus:outline-none hover:text-black focus:text-black" />
                  </div>
                </div>
              </td>
              <td class="hidden text-right md:table-cell">
                <span class="text-sm lg:text-base font-medium">
                  49,600.01€
                </span>
              </td>
              <td class="text-right">
                <span id="resultTesla" class="text-sm lg:text-base font-medium">
                  148,800.03€
                </span>
              </td>
            </tr>
            <tr>
              <td class="hidden py-4 md:table-cell">
                <a href="#">
                  <img
                    src="https://limg.app/i/Successful-Spider-Biblical-Mutant---Total-War-lKoE7D.jpeg"
                    class="w-24"
                    alt="Thumbnail"
                  />
                </a>
              </td>
              <td>
                <p class="mb-2 md:ml-4">Bic 4 colour pen</p>
              </td>
              <td class="justify-center md:justify-end md:flex md:mt-8">
                <div class="w-20 h-10">
                  <div class="relative flex flex-row w-full h-8">
                    <input id="quantityBic" type="number" value="5" data-id="3"
                      class="w-full font-semibold text-center text-gray-700 bg-gray-200 outline-none focus:outline-none hover:text-black focus:text-black" />
                  </div>
                </div>
              </td>
              <td class="hidden text-right md:table-cell">
                <span class="text-sm lg:text-base font-medium">
                  1.50€
                </span>
              </td>
              <td class="text-right">
                <span id="resultBic" class="text-sm lg:text-base font-medium">
                  7.50€
                </span>
              </td>
            </tr>
          </tbody>
        </table>
        <hr>
        <div class="lg:flex justify-center">
          <div class="lg:px-2 lg:w-1/3">
            <div class="p-4">
              <div class="flex justify-between pt-4 mb-2">
                Sous-total (3 articles) : <span class="font-bold" id="totalPrice">17,859.3€</span>
              </div>
              <button
                id="checkout"
                class="w-full flex items-center justify-center shadow border-none bg-green-500 hover:bg-green-600 text-sm px-4 py-2 leading-none border rounded text-white mt-4 lg:mt-0 transition duration-300"
              >
                <svg
                  aria-hidden="true"
                  data-prefix="far"
                  data-icon="credit-card"
                  class="w-8"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 576 512"
                >
                  <path
                    fill="currentColor"
                    d="M527.9 32H48.1C21.5 32 0 53.5 0 80v352c0 26.5 21.5 48 48.1 48h479.8c26.6 0 48.1-21.5 48.1-48V80c0-26.5-21.5-48-48.1-48zM54.1 80h467.8c3.3 0 6 2.7 6 6v42H48.1V86c0-3.3 2.7-6 6-6zm467.8 352H54.1c-3.3 0-6-2.7-6-6V256h479.8v170c0 3.3-2.7 6-6 6zM192 332v40c0 6.6-5.4 12-12 12h-72c-6.6 0-12-5.4-12-12v-40c0-6.6 5.4-12 12-12h72c6.6 0 12 5.4 12 12zm192 0v40c0 6.6-5.4 12-12 12H236c-6.6 0-12-5.4-12-12v-40c0-6.6 5.4-12 12-12h136c6.6 0 12 5.4 12 12z"
                  />
                </svg>
                <span class="ml-2 mt-5px">Proceed to checkout</span>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const products = [
    { id: 1, item: 'earphones', unitPrice: 10 },
    { id: 2, item: 'Tesla', unitPrice: 49600.01 },
    { id: 3, item: 'Bic 4 colour pen', unitPrice: 1.50 },
  ];
  const checkout = document.getElementById("checkout");
  const CLIENTID = localStorage.getItem('client-token');
  const CLIENTSECRET = localStorage.getItem('client-secret');

  const sendData = (data) => {
    return fetch("/transactions", {
      method: "POST",
      body: JSON.stringify(data),
      headers: {
        "Content-Type": "application/json",
        Authorization: "Basic " + btoa(`${CLIENTID}:${CLIENTSECRET}`),
      },
    }).then((res) => res.json());
  };

  if (checkout) {
    checkout.addEventListener("click", async () => {
      await sendData({
        customer: {
          shippingAddress: {
            address: "68 Place Charles de Gaulle",
            city: "VILLENEUVE-D",
            zipcode: "59791",
            country: "France",
          },
          billingAddress: {
            address: "68 Place Charles de Gaulle",
            city: "VILLENEUVE-D",
            zipcode: "59791",
            country: "France",
          },
        },
        cart: products.map((product) => {
          const { id, ...newObj } = product;
          return { ...newObj, quantity: getQuantity(product.id) };
        }),
        totalPrice: document.getElementById('totalPrice').innerHTML.replace(/[^0-9.-]+/g,""),
        currency: "EUR",
        metadata: {
          customerId: 1,
          orderId: Date.now()
        }
      }).then((data) => {
        window.location.replace(data.redirectUrl)
      });
    });
  }

  const getQuantity = (productId) => {
    return Number(document.querySelector(`[data-id='${productId}']`).value);
  }

  const inputEarphone = document.getElementById("quantityEarphone")
  inputEarphone.addEventListener('keyup', (e) => {
    const price = 10;
    calculPrice(inputEarphone, resultEarphone, price)
  })
  inputEarphone.addEventListener('mouseout', (e) => {
    const price = 10;
    calculPrice(inputEarphone, resultEarphone, price)
  });
  const inputTesla = document.getElementById("quantityTesla");
  inputTesla.addEventListener('keyup', (e) => {
    const price = 49600.01;
    calculPrice(inputTesla, resultTesla, price)
  })
  inputTesla.addEventListener('mouseout', (e) => {
    const price = 49600.01;
    calculPrice(inputTesla, resultTesla, price)
  });
  const inputBic = document.getElementById("quantityBic");
  inputBic.addEventListener('keyup', (e) => {
    const price = 1.5;
    calculPrice(inputBic, resultBic, price)
  })
  inputBic.addEventListener('mouseout', (e) => {
    const price = 1.5;
    calculPrice(inputBic, resultBic, price)
  });

  const calculPrice = (input, result, price) => {
    result.innerHTML = (parseFloat(input.value) * price) + "€";
    updateTotalPrice();
  }

  const updateTotalPrice = () => {
    const total =
            parseFloat(resultEarphone.textContent.substr(0, resultEarphone.textContent.length - 1))
            + parseFloat(resultTesla.textContent.substr(0, resultTesla.textContent.length - 1))
            + parseFloat(resultBic.textContent.substr(0, resultBic.textContent.length - 1));
    totalPrice.innerHTML = total + "€";
  }
</script>
<%- include('templates/footer') %>
