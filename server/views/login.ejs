<%- include('templates/header') %>
<section class="flex justify-center">
  <form class="w-full max-w-sm">
    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-full-name">
          Client Token
        </label>
      </div>
      <div class="md:w-2/3">
        <input
          class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-blue-500"
          id="inline-full-name" type="password" placeholder="******************" name="client-token">
      </div>
    </div>
    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-username">
          Client Secret
        </label>
      </div>
      <div class="md:w-2/3">
        <input
          class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-blue-500"
          id="inline-username" type="password" placeholder="******************" name="client-secret">
      </div>
    </div>
    <div class="md:flex md:items-center">
      <div class="md:w-1/3"></div>
      <div class="md:w-2/3">
        <button
          class="shadow bg-blue-500 hover:bg-blue-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
          id="submit-api" type="submit">
          Save
        </button>
      </div>
    </div>
  </form>
</section>
<script type="text/javascript">
  document.querySelector('form').addEventListener('submit', (e) => {
    const clientTokenEl = document.querySelector("input[name='client-token']");
    const clientSecretEl = document.querySelector("input[name='client-secret']");
    localStorage.setItem('client-token', clientTokenEl.value);
    localStorage.setItem('client-secret', clientSecretEl.value);
  });
</script>
<%- include('templates/footer') %>