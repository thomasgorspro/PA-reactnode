<%- include('templates/header') %>
<section class="w-full flex items-center justify-center">
  <form class="bg-white sm:shadow-md rounded sm:px-8 px-4 pt-6 pb-8 mb-4">
    <h1 class="text-xl mb-6 text-center w-full font-bold text-purple-600">Login to API</h1>
    <div class="mb-6">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="inline-full-name">
        Client Token
      </label>
      <input
        class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline transition duration-300"
        id="inline-full-name" type="password" placeholder="" name="client-token">
    </div>
    <div class="mb-6">
      <label class="lock text-gray-700 text-sm font-bold mb-2" for="inline-username">
        Client Secret
      </label>
      <input
        class="appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline transition duration-300"
        id="inline-username" type="password" placeholder="" name="client-secret">
    </div>
    <button
      class="bg-green-400 w-full hover:bg-green-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300"
      id="submit-api" type="submit">
      Log In
    </button>
  </form>
</section>
<script type="text/javascript">
  document.querySelector('form').addEventListener('submit', (e) => {
    const clientTokenEl = document.querySelector("input[name='client-token']");
    const clientSecretEl = document.querySelector("input[name='client-secret']");
    localStorage.setItem('client-token', clientTokenEl.value);
    localStorage.setItem('client-secret', clientSecretEl.value);
  });
</script>
<%- include('templates/footer') %>